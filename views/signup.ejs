<% include partials/header%>
<title>SignUp</title>
<link rel="stylesheet" type="text/css" href="css/signup.css">     
<div class="box_login">
	<div  class="hero">
   		<h1><a href="index.html">Weather Insulations</a></h1>
        <% if(user_exists){%>
         <div><p style="color: #cc0000; font-size: 0.75em; text-align: center;">Try different Username</p></div>
         <%}%>
    </div>
    <div>
    	<form method="post" action="signup" class="form_box">
    		<div><input type="text" name="first_name" required placeholder="First Name" value=""></div>
    		<div><input type="text" name="last_name" required placeholder="Last Name" value=""></div>
            <div><input type="text" name="username" placeholder = "username" required pattern="[a-zA-Z@_$#0-9]*" title="Space is not allowed" minlength="6"></div>
    		<div class="phone_number"><input type="tel" name="phone_number" value=""placeholder="phone Number" pattern="[6789]{1}[0-9]{9}" minlength="10" maxlength="10" required ><i class="far fa-times-circle"></i></div>
    		<div class="password"><input type="password" name="password" 
    			pattern="[a-zA-Z@_$#]*[0-9]+[a-zA-Z@_$#0-9]*" minlength="6" maxlength="12" placeholder="Password" required><i class="far fa-eye-slash"></i></div>
    		<div class="error"><p style="color: #cc0000; font-size: 0.7em; margin-top: -10px">minimum length is 6 characters</p></div>
    		<div><input type="submit" name="submit" value="Sign Up"></div>
    	</form>
    </div>
</div>
<script type="text/javascript" src="js/signup.js"></script>

<% include partials/footer%>